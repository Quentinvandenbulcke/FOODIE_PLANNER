<div class="container">
  <div class="line">
    <h3>Here are your favorite recipes</h3>
  </div>

  <div class="index-column">
      <% @favorites.each do |fav| %>
          <div class="recipe-card">
            <%= link_to recipe_path(fav.recipe), class: "remove-link" do %>
              <%= cl_image_tag fav.recipe.photo.key %>
            <% end %>
            <div class="w-100 justify-elements">
              <div class="card-details-top" data-controller="heart">
                <%= link_to recipe_path(fav.recipe), class: "remove-link" do %>
                  <h2><%= fav.recipe.name %></h2>
                <% end %>
                <% if fav.recipe.favorites.where(user: current_user).empty? %>
                  <%= link_to recipe_favorites_path(fav.recipe), data: { "turbo-method": :post } do %>
                    <i class="fa-regular fa-heart heart-empty" data-action="click->heart#favorite" data-heart-target="icon"></i>
                  <% end %>
                <% else %>
                  <%= link_to recipe_favorite_path(fav.recipe, fav.recipe.favorites.where(user: current_user)), data: { "turbo-method": :delete } do %>
                    <i class="fa-solid fa-heart heart-fill" data-action="click->heart#favorite" data-heart-target="icon"></i>
                  <% end %>
                <% end %>
              </div>
              <div class="card-details">
                <p><i class="fa-solid fa-clock">&nbsp;</i><%= fav.recipe.prep_time %>min</p>
                <p><i class="fa-solid fa-user-group">&nbsp;</i><%= fav.recipe.servings %></p>
                <p>
                  <% fav.recipe.rating.times do %>
                    <i class="fa-solid fa-star"></i>
                  <% end %>
                </p>
              </div>
            </div>
          </div>
      <% end %>
  </div>
</div>
