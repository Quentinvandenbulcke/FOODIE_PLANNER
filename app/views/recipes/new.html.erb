<div class="form-container">

  <div class="cta-form">
    <h2>Let's create a nice recipe!</h2>
    <p>Show us your best recipe, inspire other hungry people! Do not hesitate to add spicy details!</p>
  </div>
  <div class="new-form-recipe">
    <%= simple_form_for [@recipe], class: "recipe-form" do |f| %>
      <div class="recipe-form-name">
        <%= f.input :name, label: "Recipe Title", input_html: {class: 'form-input', maxlength: 40, style: 'width: 250px'}, label_html: {class: 'form-label'} %>
        <%= f.input :category, label: "Cuisine Type", input_html: {class: 'form-input', maxlength: 40, style: 'width: 250px'}, label_html: {class: 'form-label'} %>
      </div>
      <div class="recipe-form-num">
        <%= f.input :rating, input_html: { min: '1', max: '5' }, default: '5', input_html: {class: 'form-input', maxlength: 1, style: 'width: 175px;' }, label_html: {class: 'form-label'} %>
        <%= f.input :prep_time, label: "Prep. time (mins)", input_html: { min: '1', max: '999', maxlength: 3 }, default: '30', input_html: {class: 'form-input'}, label_html: {class: 'form-label', style: 'width: 175px;' } %>
        <%= f.input :servings, label: "Servings", input_html: { min: '1', max: '99', maxlength: 2 }, default: '2', input_html: {class: 'form-input', style: 'width: 175px;' }, label_html: {class: 'form-label'} %>
      </div>
      <%= f.input :description, label: "Instructions", input_html: { class: 'form-input', style: 'height: 500px;', maxlength: 1000}, label_html: { class: 'form-label' }, as: :text, input_html: { wrap: 'soft' } %>
      <%= f.input :photo, as: :file %>
      <%= f.submit class:"button", value: "Create this recipe"%>
    <% end %>
  </div>
</div>
